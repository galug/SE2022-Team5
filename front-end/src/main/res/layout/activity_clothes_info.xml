<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/upperLogo"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/main_logo2"
        tools:layout_editor_absoluteY="-54dp" />

    <TextView
        android:id="@+id/clothesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="상세정보"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="157dp" />

    <ImageView
        android:id="@+id/upperLine"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/upperline_dot"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="197dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:background="@drawable/border_line"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/bctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:text="상의"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="긴팔"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="색상"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/correctionBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/correction_button"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="560dp" />

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/trashbag"
            tools:layout_editor_absoluteX="297dp"
            tools:layout_editor_absoluteY="560dp" />
    </LinearLayout>
</LinearLayout>